                {
                    "type": "basic",
                    "from": {
                        "key_code": "end",
                        "modifiers": {
                            "mandatory": [
                                "command",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "end",
                            "modifiers": [
                                "shift"
                            ]
                        }
                    ]
                }
            ]
        },

