{
    "all": {
        "end_with_newline": true,
        "remove_trailing_whitespace": true,
        "operator_position": "before-newline"
    },
    "json": {
        "brace_style": "end-expand",
        "keep_array_indentation": true
    },
    "js": {
        "brace_style": "end-expand",
        "keep_array_indentation": true
    },
    "custom": {
        "*.sublime-@(settings|keymap|commands|menu)": {
            "indent_size": 4,
            "indent_style": "space",
            "brace_style": "end-expand"
        }
    }
}
