#!/bin/bash
allSysInfo="$(uname -a)"

if [[ "$allSysInfo" != *"Linux"* ]]; then
    if [[ "$allSysInfo" == *"Mac"* ]]; then
        echo "$allSysInfo" | cut -f 1-3 -d ' '
        exit 0
    fi
fi

os="$(cat /etc/issue.net)"

echo "OS: $os"

if [[ "$allSysInfo" == *"~"* ]]; then
    osBranchedFromOs="$(echo $allSysInfo | grep -P -o '(?<=~)[\S]+')"

    echo "Branched from: $osBranchedFromOs"
fi
